# AWS Amplify Deployment Configuration for PrintLite
# This file shows the complete configuration for deploying to AWS Amplify
# Copy this to amplify.yml and configure environment variables in Amplify Console

version: 1
frontend:
  phases:
    preBuild:
      commands:
        - nvm use 20.11.0
        - node --version
        - npm --version
        - npm install --legacy-peer-deps --no-audit
    build:
      commands:
        - npm run build
  artifacts:
    baseDirectory: dist
    files:
      - '**/*'
  cache:
    paths:
      - node_modules/**/*
  customHeaders:
    - pattern: '**/*'
      headers:
        - key: 'X-Frame-Options'
          value: 'DENY'
        - key: 'X-XSS-Protection'
          value: '1; mode=block'
        - key: 'X-Content-Type-Options'
          value: 'nosniff'

# Environment Variables to set in Amplify Console:
# VITE_API_URL - Your backend API URL (if using external backend)
# VITE_USER_POOL_ID - AWS Cognito User Pool ID (if using Cognito)
# VITE_USER_POOL_CLIENT_ID - AWS Cognito App Client ID
# VITE_IDENTITY_POOL_ID - AWS Cognito Identity Pool ID  
# VITE_GRAPHQL_ENDPOINT - GraphQL API endpoint (if using AppSync)
# VITE_API_KEY - GraphQL API key
# VITE_S3_BUCKET - S3 bucket name for file uploads
# VITE_AWS_REGION - AWS region (default: us-east-1)