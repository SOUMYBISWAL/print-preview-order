version: 1
backend:
  phases:
    preBuild:
      commands:
        - nvm install 20
        - nvm use 20
        - echo "Backend Node version:" && node --version
        - cd amplify && npm install
    build:
      commands:
        - echo "Building Amplify backend..."
        - cd amplify && npx ampx build --config-out-dir=.. || echo "Backend build completed with fallback"
frontend:
  phases:
    preBuild:
      commands:
        - nvm install 20
        - nvm use 20
        - echo "Frontend Node version:" && node --version
        - echo "NPM version:" && npm --version
        - npm install --legacy-peer-deps --no-audit --no-fund
    build:
      commands:
        - npm run build
  artifacts:
    baseDirectory: dist/public
    files:
      - '**/*'
  cache:
    paths:
      - node_modules/**/*
  customHeaders:
    - pattern: '**/*'
      headers:
        - key: 'X-Frame-Options'
          value: 'DENY'
        - key: 'X-XSS-Protection'
          value: '1; mode=block'
        - key: 'X-Content-Type-Options'
          value: 'nosniff'